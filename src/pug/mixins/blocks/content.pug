mixin block_content(item)
	.block_content&attributes(attributes)
		.container
			.row.justify-content-center
				.col-lg-8.col-md-11
					if item.image
						if item.image.href
							a.block_content-image(class=`${item.spacing}`)
								+lazyPicture({
									src: item.image.url,
									alt: `${item.title} - изображение`,
								})
						else
							.block_content-image(class=`${item.spacing}`)
								+lazyPicture({
									src: item.image.url,
									alt: `${item.title} - изображение`,
								})
					if item.description
						.block_content-description.h3.mb-8
							| !{item.description}
					if item.title
						.block_content-title.h1(class=`${item.spacing}`)
							| !{item.title}
					if item.text
						.block_content-text(class=`${item.spacing}`)
							| !{item.text}
					if item.links
						.block_content__links
							each link in item.links
								.block_content__links-item
									a(href=link.href).btn.btn-secondary.btn-small
										span
											| !{link.title}
